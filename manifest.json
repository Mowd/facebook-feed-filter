{
  "manifest_version": 2,
  "name": "Facebook Feed Filter - Remove Recommendations",
  "short_name": "FB Feed Filter",
  "version": "1.0.1",
  "description": "Remove sponsored posts, suggested content and Reels from Facebook feed. Keep only friends' posts.",
  "default_locale": "en",

  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "*://*.facebook.com/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "mowd8574@gmail.com",
      "strict_min_version": "58.0"
    }
  }
}
